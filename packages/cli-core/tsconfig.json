{
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "target": "es2017",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "typeRoots": ["../node_modules/@types", "node_modules/@types"]
  },
  "include": ["src/**/*"],
  "exclude": ["**/*.spec.ts"]
}
